<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ==================== M939 "Paraman" ==================== -->
  <!-- 介於猿人與鬣蜥之間的產物 -->
  <ThingDef ParentName="USAC_BaseHumanoidMech">
    <defName>USAC_Mech_Paraman</defName>
    <label>M939 "Paraman"</label>
    <description>A medium mechanized airborne unit. Designed for rapid deployment operations with enhanced mobility and moderate firepower. Based on the battle frame chassis.</description>
    <statBases>
      <MoveSpeed>3.7</MoveSpeed>
      <ArmorRating_Sharp>0.55</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
      <ArmorRating_Heat>1.0</ArmorRating_Heat>
      <StaggerDurationFactor>0.35</StaggerDurationFactor>
      <AimingDelayFactor>1.3</AimingDelayFactor>
      <CaravanRidingSpeedFactor>1.3</CaravanRidingSpeedFactor>
      <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">4</BandwidthCost>
      <WastepacksPerRecharge MayRequire="Ludeon.Rimworld.Biotech">2</WastepacksPerRecharge>
    </statBases>
    <race>
      <body>USAC_Humanoid_Soldat</body>
      <baseBodySize>1.3</baseBodySize>
      <baseHealthScale>1.5</baseHealthScale>
      <renderTree>USAC_LargeMech</renderTree>
      <mechWeightClass>Heavy</mechWeightClass>
    </race>
    <modExtensions>
      <li Class="Fortified.MechWeaponExtension">
        <EnableWeaponFilter>true</EnableWeaponFilter>
        <UsableWeaponTags>
          <li MayRequire="vanillaexpanded.vwehw">HeavyGun</li><!--重型武器拓展-->
          <li>A_SuppressWeapon</li>
          <li>DMS_MechWeaponTransHeavy</li>
          <li>DMS_Gun_Recoilless</li>
          <li>USAC_Heavy</li>
        </UsableWeaponTags>
        <BypassUsableWeapons />
      </li>
    </modExtensions>
    <butcherProducts>
      <Steel>30</Steel>
      <Plasteel>10</Plasteel>
    </butcherProducts>
  </ThingDef>

  <PawnKindDef ParentName="USAC_BaseMechKind">
    <defName>USAC_Mech_Paraman</defName>
    <label>M939 Paraman</label>
    <race>USAC_Mech_Paraman</race>
    <combatPower>160</combatPower>
    <aiAvoidCover>true</aiAvoidCover>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Mech/paraman</texPath>
          <shaderType>CutoutComplex</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.9</drawSize>
          <color>(192, 175, 158)</color>
          <shadowData>
            <volume>(0.7,0.7,0.7)</volume>
            <offset>(0,0,0)</offset>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags>
      <li>USAC_AGL</li>
      <li>USAC_AC</li>
      <li>USAC_HDMR</li>
    </weaponTags>
    <weaponMoney>1500~9999</weaponMoney>
  </PawnKindDef>
</Defs>