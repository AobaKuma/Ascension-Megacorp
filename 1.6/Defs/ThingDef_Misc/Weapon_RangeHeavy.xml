    <solidTime>0.45</solidTime>
    <fadeOutTime>0.35</fadeOutTime>
    <growthRate>0.7</growthRate>
    <collide>true</collide>
  </FleckDef>

  <EffecterDef>
    <defName>USAC_ConeExplosion</defName>
    <children>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>-0.15</positionRadius>
        <fleckDef>USAC_SplashedPieces</fleckDef>
        <burstCount>24~34</burstCount>
        <speed>3~11</speed>
        <scale>0.55~1.05</scale>
        <angle>-78~78</angle>
        <positionLerpFactor>0.8</positionLerpFactor>
        <fleckUsesAngleForVelocity>true</fleckUsesAngleForVelocity>
        <attachToSpawnThing>true</attachToSpawnThing>
        <color>(85,80,75)</color>
      </li>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>-0.15</positionRadius>
        <fleckDef>USAC_SplashedPieces_Center</fleckDef>
        <burstCount>14~22</burstCount>
        <speed>6~16</speed>
        <scale>0.5~0.95</scale>
        <angle>-35~35</angle>
        <positionLerpFactor>0.8</positionLerpFactor>
        <fleckUsesAngleForVelocity>true</fleckUsesAngleForVelocity>
        <attachToSpawnThing>true</attachToSpawnThing>
        <color>(95,90,85)</color>
      </li>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>-0.05</positionRadius>
        <fleckDef>USAC_SplashedPieces_Center</fleckDef>
        <burstCount>8~14</burstCount>
        <speed>4~10</speed>
        <scale>0.55~0.9</scale>
        <angle>-18~18</angle>
        <positionLerpFactor>0.9</positionLerpFactor>
        <fleckUsesAngleForVelocity>true</fleckUsesAngleForVelocity>
        <attachToSpawnThing>true</attachToSpawnThing>
        <color>(110,105,100)</color>
      </li>
    </children>
  </EffecterDef>

  <ThingDef ParentName="USAC_BaseGun" Name="USAC_BaseHeavyGun" Abstract="True">
