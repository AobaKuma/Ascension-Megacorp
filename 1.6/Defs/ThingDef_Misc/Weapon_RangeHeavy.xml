  <ThingDef ParentName="BaseBullet">
    <defName>USAC_Bullet_TorchwoodRound</defName>
    <label>105mm recoilless round</label>
    <thingClass>Fortified.Projectile_ConeExplosive</thingClass>
    <tickerType>Normal</tickerType>
    <projectile>
      <speed>80</speed>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>55</damageAmountBase>
      <armorPenetrationBase>0</armorPenetrationBase>
      <stoppingPower>1.5</stoppingPower>
      <ai_IsIncendiary>false</ai_IsIncendiary>
      <soundExplode>Explosion_Rocket</soundExplode>
      <shadowSize>0.6</shadowSize>
    </projectile>
    <modExtensions>
      <li Class="Fortified.ExplosiveExtension">
        <damage>Bullet</damage>
        <damageAmount>60</damageAmount>
        <armorPen>0</armorPen>
        <preExplosionOffset>2</preExplosionOffset>
        <range>15</range>
        <swayAngle>120</swayAngle>
        <doVisualEffects>false</doVisualEffects>
        <effecterDef>USAC_ConeExplosion</effecterDef>
      </li>
    </modExtensions>
    <graphicData>
      <texPath>Things/Projectile/Bullet_big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>1.8</drawSize>
    </graphicData>
    <comps>
      <li Class="CompProperties_ProjectileEffecter">
        <effecterDef>FFF_LaunchDust_Recoilless</effecterDef>
      </li>
    </comps>
  </ThingDef>

  <FleckDef ParentName="FleckBase_Thrown">
    <defName>USAC_SplashedPieces</defName>
