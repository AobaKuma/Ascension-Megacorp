<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="BaseGun">
		<defName>USAC_HeavyMachineGunMounted</defName>
		<label>Foxhound GPMG</label>
		<description>A multi-purpose heavy machine gun with a lightweight composite material frame and improved design, it is widely used in various weapon platforms and fixed defensive facilities. In the distant past, before materials were almost discontinued due to war, it was a very successful alternative to the M2 heavy machine gun.</description>
		<graphicData>
			<texPath>Things/Building/Turrets/USAC_Gun_Foxhound</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>2.5</drawSize>
		</graphicData>
		<relicChance>0</relicChance>
		<tradeability>None</tradeability>
		<destroyOnDrop>true</destroyOnDrop>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<AccuracyTouch>0.50</AccuracyTouch>
			<AccuracyShort>0.58</AccuracyShort>
			<AccuracyMedium>0.45</AccuracyMedium>
			<AccuracyLong>0.36</AccuracyLong>
			<RangedWeapon_Cooldown>2.3</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>USAC_Bullet_HeavyMachineGun</defaultProjectile>
				<requireLineOfSight>true</requireLineOfSight>
				<warmupTime>1.5</warmupTime>
				<range>39.9</range>
				<ticksBetweenBurstShots>20</ticksBetweenBurstShots>
				<burstShotCount>5</burstShotCount>
				<soundCast>Shot_Autocannon</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>10</muzzleFlashScale>
				<consumeFuelPerShot>1</consumeFuelPerShot>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
			</li>
		</verbs>
		<weaponTags>
			<li>USAC_Cobalt</li>
		</weaponTags>
		<modExtensions>
			<li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(0.5,0.5)</drawSize>
				<offsets>
					<li>(0.75,0)</li>
				</offsets>
				<isAlternately>true</isAlternately>
			</li>
		</modExtensions>
	</ThingDef>

</Defs>