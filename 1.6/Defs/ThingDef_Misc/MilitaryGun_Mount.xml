<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Mounted HMG, missing turret base xml definition. -->
	<ThingDef ParentName="DMS_AutomatroidTurretGun">
		<defName>USAC_HeavyMachineGunMounted</defName>
		<label>Mounted HMG</label>
		<description>white.</description>
		<graphicData>
			<texPath>Things/Turrets/USAC_HeavyMachineGunMounted</texPath>
			<drawSize>2</drawSize>
		</graphicData>
		<statBases>
			<AccuracyTouch>0.50</AccuracyTouch>
			<AccuracyShort>0.58</AccuracyShort>
			<AccuracyMedium>0.45</AccuracyMedium>
			<AccuracyLong>0.36</AccuracyLong>
			<RangedWeapon_Cooldown>2.3</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>DMS_Bullet_Kord</defaultProjectile>
				<requireLineOfSight>true</requireLineOfSight>
				<warmupTime>1.5</warmupTime>
				<range>39.9</range>
				<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
				<burstShotCount>10</burstShotCount>
				<soundCast>Shot_Autocannon</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>10</muzzleFlashScale>
				<consumeFuelPerShot>1</consumeFuelPerShot>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
			</li>
		</verbs>
		<weaponTags>
			<li>DMS_HeavyMachineGunMounted</li>
		</weaponTags>
		<modExtensions>
			<li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(0.5,0.5)</drawSize>
				<offsets>
					<li>(0.75,0)</li>
				</offsets>
				<isAlternately>true</isAlternately>
			</li>
		</modExtensions>
	</ThingDef>

</Defs>
