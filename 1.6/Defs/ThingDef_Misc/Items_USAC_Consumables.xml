<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Disposable Battery -->
  <ThingDef ParentName="ResourceBase">
    <defName>USAC_DisposableBattery</defName>
    <label>disposable battery</label>
    <description>A disposable battery designed to rapidly charge mechanoids. To prevent safety hazards from unauthorized modification, it is designed to short-circuit and self-destruct after a single use.</description>
    <graphicData>
      <texPath>Things/Item/Special/USAC_Battery</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>10</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>500</MarketValue>
      <Mass>0.2</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
    <tradeTags>
      <li>USAC_Consumable</li>
    </tradeTags>
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>USAC_UseItemOnTarget</useJob>
        <useLabel>Use battery to charge mechanoid</useLabel>
        <useDuration>100</useDuration>
      </li>
      <li Class="CompProperties_UseEffectPlaySound">
        <soundOnUsed>EnergyShield_Reset</soundOnUsed>
      </li>
      <li Class="CompProperties_UseEffectDestroySelf" />
      <li Class="CompProperties_Targetable">
        <compClass>USAC.CompTargetable_Mechanoid</compClass>
      </li>
      <li>
        <compClass>USAC.CompTargetEffect_DisposableBattery</compClass>
      </li>
    </comps>
  </ThingDef>

  <!-- Disposable Repair Tool -->
  <ThingDef ParentName="ResourceBase">
    <defName>USAC_DisposableRepairTool</defName>
    <label>disposable repair tool</label>
    <description>A square nano-storage container that releases nanomachines to analyze and repair damaged structures. Designed for single-use to ensure safety and corporate compliance.</description>
    <graphicData>
      <texPath>Things/Item/Special/USAC_RepairTool</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>10</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>250</MarketValue>
      <Mass>0.3</Mass>
      <Flammability>0.5</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
    <tradeTags>
      <li>USAC_Consumable</li>
    </tradeTags>
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>USAC_UseItemOnTarget</useJob>
        <useLabel>Use kit to repair mechanoid</useLabel>
        <useDuration>200</useDuration>
      </li>
      <li Class="CompProperties_UseEffectPlaySound">
        <soundOnUsed>Recipe_Surgery</soundOnUsed>
      </li>
      <li Class="CompProperties_UseEffectDestroySelf" />
      <li Class="CompProperties_Targetable">
        <compClass>USAC.CompTargetable_Mechanoid</compClass>
      </li>
      <li>
        <compClass>USAC.CompTargetEffect_DisposableRepairTool</compClass>
      </li>
    </comps>
  </ThingDef>

  <!-- Pain Relief Survival Pack -->
  <ThingDef ParentName="MealBase">
    <defName>USAC_MealSurvivalPack</defName>
    <label>B-Ration</label>
    <description>A military meal made from a soft split bun, compressed protein patty, and some sharp sauce. Its patented sealed packaging allows it to remain viable for decades when heated unopened. Along with stable calories, it contains a sustained-release analgesic formula that reduces bodily pain for about half a day.</description>
    <graphicData>
      <texPath>Things/Item/Meal/bRation</texPath>
      <graphicClass>Graphic_MealVariants</graphicClass>
    </graphicData>
    <statBases>
      <DeteriorationRate>0.25</DeteriorationRate>
      <MarketValue>40</MarketValue>
      <Mass>0.2</Mass>
      <Nutrition>1.0</Nutrition>
    </statBases>
    <tradeability>Buyable</tradeability>
    <ingestible>
      <preferability>MealSimple</preferability>
      <optimalityOffsetHumanlikes>-4</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>-100</optimalityOffsetFeedingAnimals>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>USAC_PainReliefIngestion</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <allowedArchonexusCount>40</allowedArchonexusCount>
  </ThingDef>

  <HediffDef>
    <defName>USAC_PainReliefIngestion</defName>
    <label>analgesic effect</label>
    <labelNoun>analgesic effect from ingested meal</labelNoun>
    <description>A sustained analgesic effect from ingested b-ration.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>30000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
        <painFactor>0.6</painFactor>
      </li>
    </stages>
  </HediffDef>

</Defs>
